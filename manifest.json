{
  "manifest_version": 3,
  "name": "article narrator",
  "version": "1.0",
  "description": "scroll through articles while they're read to you",
  "permissions": ["activeTab", "scripting", "webRequest"],
  "host_permissions": ["http://localhost/*", "http://127.0.0.1/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["streaming-player.js", "content.js", "narrator-ui.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["narrator-ui.html"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}
